@model SagaEvent.Models.ADMIN
@using SagaEvent.Controllers

@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link rel="stylesheet" href="~/Content/admindashstyle.css">
    <title>Admin panel</title>
</head>

<body>
    <div class="container">
        <div class="topbar">
            <div class="logo">
                <h3>Welcome @Session["adminEmailSession"]</h3>
            </div>

            <div class="user">
                <button class="btn-danger"><a href="@Url.Action("AdminLogout", "Admin")">LogOut<span class="sr-only">(current)</span></a></button>


            </div>
        </div>
        @{ if (@Session["adminEmailSession"].Equals("admin@gmail.com"))
            {
    <div class="sidebar">
        <ul>
            <li>
                <a href="../Admin/ViewOrders">
                    <i class="fas fa-chart-bar"></i>
                    <div>All Orders</div>
                </a>
            </li>
            <li>
                <a href="../Admin/AddAdmin">
                    <i class="fas fa-user"></i>
                    <div>Add Admin</div>
                </a>
            </li>

            <li>
                <a href="../Admin/ViewUser">
                    <i class="fas fa-users"></i>
                    <div>All User</div>
                </a>
            </li>


            <li>
                <a href="../Admin/AddEvent">
                    <i class="fas fa-cog"></i>
                    <div>Add Event</div>
                </a>
            </li>
            <li>
                <a href="../Admin/ViewEvents">
                    <i class="fas fa-th-large"></i>
                    <div>All Events</div>
                </a>
            </li>
        </ul>
    </div> }
else
{
    <div class="sidebar">
        <ul>
            <li>
                <a href="../Admin/ViewOrders">
                    <i class="fas fa-chart-bar"></i>
                    <div>All Orders</div>
                </a>
            </li>
            @*<li>
                <a href="../adminlogin/addadmin">
                    <i class="fas fa-user"></i>
                    <div>Add Admin</div>
                </a>
            </li>*@

            @*<li>
                <a href="#">
                    <i class="fas fa-users"></i>
                    <div>All User</div>
                </a>
            </li>*@


            <li>
                <a href="../Admin/AddEvent">
                    <i class="fas fa-cog"></i>
                    <div>Add Event</div>
                </a>
            </li>
            <li>
                <a href="../Admin/ViewEvents">
                    <i class="fas fa-th-large"></i>
                    <div>All Events</div>
                </a>
            </li>
        </ul>
    </div> } }
        <div class="main">
            @using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post))
            {
    <div class="login">
        <form id="login" action="" method="post">


            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>New Admin Email</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.adminEmail, new { @class = "form-control", @placeholder = "Admin Email", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.adminEmail)</span>

            <br />
            <label for="psw"><b>Password</b></label>
            @*<input type="password" placeholder="Enter Password" name="psw" required>*@

            @Html.PasswordFor(x => x.adminPassword, new { @class = "form-control", @placeholder = "Password", @id = "Pass" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.adminPassword)</span>

            <br />
            <div class="row">
                <input type="submit" value="Add Admin" id="log" class="btn btn-success" />
            </div>


            <div class="form-group">
                <p style="color:red">@ViewBag.error</p>
            </div>
            <div>
                @*<h5>Back to home</h5>*@
                <a href='@Url.Action("AdminDashBoard", "Admin")'>Back to dashboard</a>
            </div>
        </form>
    </div>}
        </div>
    </div>


</body>

</html>
